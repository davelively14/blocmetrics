<h1>My Apps</h1>

<div class="row">
  <div class="col-md-4">
    <h3><%= @user.username %></h3>
    <h3><small>Apps: <%= @apps.count %></small></h3>
    <%= link_to "Register New App", "#", class: 'btn btn-success' %>
  </div>
  <div class="col-md-8">
    <table class="table table-hover">
      <thead>
        <tr>
          <th width="70%">App Title</th>
          <th width="30%">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @apps.each do |app| %>
          <tr>
            <td><%= link_to app.name, registered_application_path(app) %></td>
            <td>delete | edit</td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
